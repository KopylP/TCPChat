<Window x:Class="ChatClient.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="Registration" Height="250" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Registration" HorizontalAlignment="Stretch" TextAlignment="Center" Style="{StaticResource txtAuthStyle}"/>
            <Label Content="Email:"/>
            <TextBox x:Name="txtEmail" Margin="6 0" BorderThickness="1"/>
            <Label Content="Name:"/>
            <TextBox x:Name="txtName" Margin="6 0" BorderThickness="1"/>
            <Label Content="Password:"/>
            <PasswordBox x:Name="txtPassword"  Margin="6 0" BorderThickness="1"/>
            <Button x:Name="btnRegister" Click="btnRegister_Click" Content="Register" HorizontalAlignment="Center" Margin="5" Padding="8 2 8 2"/>
        </StackPanel>
    </Grid>
</Window>
