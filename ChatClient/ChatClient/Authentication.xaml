<Window x:Class="ChatClient.Authentication"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Authentication" Height="234.821" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Authentication" HorizontalAlignment="Stretch" TextAlignment="Center" Style="{StaticResource txtAuthStyle}"/>
            <Label x:Name="lblError" HorizontalAlignment="Center" Foreground="red" FontWeight="Bold"/>
            <Label Content="Email:"/>
            <TextBox x:Name="txtEmail"  Margin="5 0"/>
            <Label Content="Password:"/>
            <PasswordBox x:Name="txtPassword" Margin="5 0"/>
            <DockPanel LastChildFill="True">
                <Button x:Name="btnLogin" Click="btnLogin_Click" Content="Log in" HorizontalAlignment="Center" Margin="5" Padding="20 5 20 5" DockPanel.Dock="Left"/>
                <Button x:Name="btnRegister" Click="btnRegister_Click"   Style="{StaticResource btnReg}" DockPanel.Dock="Right" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 5 0"/>
            </DockPanel>
        </StackPanel>
    </Grid>
    
</Window>
